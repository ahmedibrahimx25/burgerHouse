<!-- views/profile.ejs -->
<!doctype html>
<html>

<head>
    <title>Burger House</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="public/CSS/account.css">

</head>

<body>
    <div class="container">
        <div class="navbar">
            <a class="logo" href="">BH</a>
            <a class="navbar-element" href="/home">Home</a>
            <a class="navbar-element" href="/menu">Menu</a>
            <a class="navbar-element" href="/cart">Cart</a>
            <a class="navbar-element" href="/account">Account</a>
        </div>
        <div class="page-header text-center">
            <h1><span class="fa fa-anchor"></span> Profile Page</h1>
            <a href="/logout" class="btn btn-danger btn-lg">Logout</a>
        </div>

        <div class="row">

            <!-- LOCAL INFORMATION -->
            <div class="col-sm-6">
                <div class="well">
                    <h3><span class="fa fa-user"></span>USER INFO</h3>

                    <p>
                        <strong>First Name</strong>: <%= user.first_name%><br>
                            <strong>Last Name</strong>: <%= user.last_name %><br>
                                <strong>Email</strong>: <%= user.email %><br>
                                    <strong>City</strong>: <%= user.city %>
                                        <strong>Address</strong>: <%= user.address %><br>
                                            <strong>Phone</strong>: <%= user.phone %><br>
                    </p>

                </div>
            </div>

        </div>

    </div>
</body>

</html>